### FIGURE
figure.figsize: 8, 6
figure.facecolor: white
figure.dpi: 100

### LINES
lines.linewidth: 2
lines.markersize: 2

### Legend
legend.fontsize: 12
legend.loc: upper left
legend.frameon: False
legend.scatterpoints: 1

### TICKS
xtick.direction: out
ytick.direction: out
xtick.labelsize: 14
ytick.labelsize: 14
xtick.major.size: 8
ytick.major.size: 8

### FONTS
font.family: sans-serif
font.sans-serif: Roboto, 'Avenir', Arial, Helvetica, sans-serif
font.weight: normal
font.size: 18

### AXES
axes.grid: True
axes.facecolor: white
axes.linewidth: 1.0
axes.labelsize: 16
axes.spines.top: False
axes.spines.right: False
axes.prop_cycle: cycler('color', ['1990BE', 'A12A48', 'C76216', '57B154'])

### GRIDS
grid.linewidth: 0.5     
grid.alpha: 0.24

### SAVING FIGURES
savefig.dpi: 600
savefig.bbox: tight
savefig.format: svg
savefig.transparent: True